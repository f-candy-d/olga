<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.f_candy_d.olga">

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.activity.FilterdTaskListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.activity.TodoTaskFlowFormActivity"
            android:label="@string/title_activity_form_todo"
            android:theme="@style/FormTheme.NoActionBar">
        </activity>
        <activity
            android:name=".presentation.activity.TaskFormActivity"
            android:label="@string/title_activity_task_form"
            android:theme="@style/FormTheme.NoActionBar">
        </activity>
        <activity
            android:name=".presentation.activity.DetailsActivity"
            android:label="@string/title_activity_details"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>