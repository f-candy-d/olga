<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:orientation="vertical"
                                            android:background="@color/color_set_1_primary"
                                            tools:context="com.f_candy_d.olga.presentation.fragment.DateFormFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingStart="24dp"
        android:paddingRight="24dp"
        app:paddingEnd="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp">

        <TextView
            android:id="@+id/mess_label_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date"
            android:textColor="@color/color_set_1_accent"/>

        <RelativeLayout
            android:id="@+id/start_date_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@+id/mess_label_start_date"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/date_label_start_m_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sep. 15"
                android:textColor="@android:color/white"
                android:textSize="34sp"/>

            <TextView
                android:id="@+id/date_label_start_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/date_label_start_m_d"
                android:layout_toEndOf="@+id/date_label_start_m_d"
                android:layout_alignBottom="@+id/date_label_start_m_d"
                android:layout_marginLeft="24dp"
                android:textColor="@android:color/white"
                android:layout_marginStart="24dp"/>

            <TextView
                android:id="@+id/date_label_start_h_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 : 45 a.m."
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_below="@+id/date_label_start_m_d"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#B0BEC5"
            android:layout_below="@+id/start_date_bg"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="64dp"
            android:layout_marginStart="64dp"/>

        <TextView
            android:id="@+id/mess_label_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date"
            android:layout_marginTop="48dp"
            android:layout_below="@+id/divider"
            android:textColor="@color/color_set_1_accent"/>

        <RelativeLayout
            android:id="@+id/end_date_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@+id/mess_label_end_date"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/date_label_end_m_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sep. 15"
                android:textColor="@android:color/white"
                android:textSize="34sp"/>

            <TextView
                android:id="@+id/date_label_end_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/date_label_end_m_d"
                android:layout_toEndOf="@+id/date_label_end_m_d"
                android:layout_alignBottom="@+id/date_label_end_m_d"
                android:layout_marginLeft="24dp"
                android:textColor="@android:color/white"
                android:layout_marginStart="24dp"/>

            <TextView
                android:id="@+id/date_label_end_h_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03 : 20 p.m."
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_below="@+id/date_label_end_m_d"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
