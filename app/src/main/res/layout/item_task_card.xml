<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:id="@+id/task_card_bg"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    app:cardBackgroundColor="@color/color_teal"
                                    android:clickable="true"
                                    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="24dp"
        android:paddingTop="24dp"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/task_card_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go To Library"
            android:textSize="@dimen/primary_text"
            android:textAlignment="center"
            android:textColor="@color/primary_text_dark"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/task_card_task_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="14 things men should never wear after 30."
            android:textColor="@color/secondary_text_dark"
            android:textSize="@dimen/secondary_text"
            android:layout_below="@+id/task_card_task_title"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"/>

    </RelativeLayout>

    <include
        layout="@layout/archived_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</android.support.v7.widget.CardView>